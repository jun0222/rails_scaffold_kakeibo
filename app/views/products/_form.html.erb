<%= form_with(model: product, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group pb-4">
    <%= form.label Settings.label.shop, class: 'control-label' %>
    <%= form.text_field :shop, class: 'form-control', required: true %>
    <div class="invalid-feedback">Please enter a shop name.</div>
  </div>

  <div class="form-group pb-4">
    <%= form.label Settings.label.kind, class: 'control-label' %>
    <%= form.text_field :kind, class: 'form-control', required: true %>
    <div class="invalid-feedback">Please enter a kind.</div>
  </div>

  <div class="form-group pb-4">
    <%= form.label Settings.label.price, class: 'control-label' %>
    <%= form.number_field :price, class: 'form-control', required: true %>
    <div class="invalid-feedback">Please enter a price.</div>
  </div>

  <div class="form-group pb-4">
    <%= form.label Settings.label.purchased_at, class: 'control-label' %>
    <%= form.date_field :purchased_at, class: 'form-control', required: true %>
    <div class="invalid-feedback">Please enter a purchased_at.</div>
  </div>

  <div class="text-end">
    <%= form.submit 'Save Product', class: 'btn btn-primary' %>
  </div>
<% end %>
